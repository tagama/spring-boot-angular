div(ng-include='\'partials/navbar.html\'')

.row
  .col-sm-12
    h1 Change Password
    
  .col-sm-12
    form.form(name='form', ng-submit='createUser(form)')

      .form-group
        label Nome
        input.form-control(type='text', name='name', ng-model='client.name', required='')
        p.help-block(ng-show='form.password.$error')
          | {{ errors.other }}

      .form-group
        label Data de nascimento
        input.form-control(type='text', name='birth', ng-model='client.birth', required='')
        p.help-block(ng-show='(form.birth.$error || submitted)')
          | 01/01/2011

      p.help-block  {{ message }} 

      button.btn.btn-lg.btn-primary(type='submit') Save changes
